# ============================================
# BACKEND - Environment Configuration Example
# ============================================
# Copy this file to .env and fill with your values
# NEVER commit .env with real secrets!

# Application
ENVIRONMENT="development"
DEBUG="False"
HOST="0.0.0.0"
PORT="8000"
LOG_LEVEL="INFO"

# Database (use Railway, AWS RDS, or local PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/menuhub_dev"

# Redis Cache (optional, but recommended for production)
REDIS_URL="redis://localhost:6379"

# Rate Limiting
RATE_LIMIT_ENABLED="True"

# JWT Secrets (generate new ones for production!)
SECRET_KEY="your-secret-key-here-generate-a-new-one"
REFRESH_SECRET_KEY="your-refresh-secret-key-here-generate-a-new-one"

# JWT Expiration
ACCESS_TOKEN_EXPIRE_MINUTES="30"
REFRESH_TOKEN_EXPIRE_DAYS="30"

# AWS S3 (use IAM Role if possible, otherwise use these)
# NOTE: Do NOT use static credentials in production!
# Instead, use IAM Roles on EC2/ECS or AWS Secrets Manager
AWS_REGION="us-east-1"
AWS_BUCKET_NAME="menuhub-dev"
# AWS_ACCESS_KEY_ID="your-key-id"  # Use IAM Role instead!
# AWS_SECRET_ACCESS_KEY="your-secret"  # Use IAM Role instead!

# Email (Resend)
RESEND_API_KEY="your-resend-api-key"

# Payment Gateway (Pagar.me)
PAGARME_SECRET_KEY="your-pagarme-secret-key"
PAGARME_PUBLIC_KEY="your-pagarme-public-key"
PAGARME_ENVIRONMENT="test"
PAGARME_API_URL="https://api.pagar.me/core/v5"
PAGARME_WEBHOOK_USER="menuhub_webhook"
PAGARME_WEBHOOK_PASSWORD="your-webhook-password"

# Chatbot Integration
CHATBOT_SERVICE_URL="https://chatbot-production-f10b.up.railway.app/api"
CHATBOT_WEBHOOK_SECRET="your-chatbot-webhook-secret"

# Encryption
ENCRYPTION_KEY="your-encryption-key-base64-encoded"

# CORS Configuration
PLATFORM_DOMAIN="menuhub.com.br"
ALLOWED_ORIGINS="https://menuhub.com.br,https://www.menuhub.com.br,https://app.menuhub.com.br,https://admin.menuhub.com.br"
